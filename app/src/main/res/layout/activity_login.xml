<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.home.LoginActivity"
    android:background="@color/colorRegBackgroundAss"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:orientation="vertical"
            android:gravity="center"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">


                <LinearLayout
                    android:id="@+id/loginViewLL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/activity_vertical_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="110dp"
                    android:orientation="vertical"
                    android:paddingTop="70dp"
                    android:paddingBottom="20dp"
                    android:background="@drawable/shadow_with_redious"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/input_text_bottom_margin"
                        android:orientation="horizontal"
                        >


                        <EditText
                            android:id="@+id/login_user_name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:drawableLeft="@drawable/ic_perm_identity_deep_purple_500_24dp"
                            android:drawablePadding="6dp"
                            android:hint="Name"
                            android:inputType="number"
                            />

                    </LinearLayout>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <EditText
                            android:id="@+id/login_user_password"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:drawableLeft="@drawable/ic_lock_outline_deep_purple_500_24dp"
                            android:drawablePadding="6dp"
                            android:hint="Password"
                            android:inputType="textPassword"

                            />

                        <ImageView
                            android:id="@+id/login_show_or_hidden_password_eye"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignRight="@+id/login_user_password"
                            app:srcCompat="@drawable/ic_visibility_off_deep_purple_500_24dp"
                            android:layout_centerInParent="false"
                            android:layout_marginTop="@dimen/margin_4dp"
                            android:paddingRight="@dimen/margin_4dp"
                            android:tag="1"/>
                    </RelativeLayout>


                    <TextView
                        android:id="@+id/loginTV"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="6dp"
                        android:text="Login"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/regular_text_size"
                        android:onClick="clickOnLogin"
                        />





                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_marginBottom="@dimen/margin_6dp"
                        android:textColor="@color/colorTabUnselectedText"
                        android:gravity="center"
                        android:textSize="@dimen/large_text_size"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="110dp"
                        android:src="@drawable/delivery"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_8dp"
                    android:background="@drawable/ic_bottom_shadow"
                    android:layout_below="@+id/loginViewLL"
                    android:visibility="gone"/>
            </RelativeLayout>




        </LinearLayout>



    </ScrollView>




</LinearLayout>